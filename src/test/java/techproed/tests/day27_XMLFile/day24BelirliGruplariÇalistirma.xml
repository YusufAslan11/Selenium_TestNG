<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Day24 SmokeTest">
    <test  name="Negative and positive test">

    <!-- Testlerimizde .xml file ile belirli grupları çalıştırmak istersek,
     çalıştırmak istediğimiz @test notasyonundan sonra grup parametresi ile isim belirtmemiz gerekir
     .xml file ile belirli grupları çalıştırmak için <test> tagından sonra  <groups> tagı kullanılır  sonrasında hangi class yada
     package da oldupu belirtilir-->
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="techproed.tests.day24_Properties_Pages.SmokeTest"/>
        </packages>
    </test>
</suite>